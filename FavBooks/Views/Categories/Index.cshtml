@model IEnumerable<FavBooks.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" type="button" asp-action="Create"> <i class="bi bi-plus-circle"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
